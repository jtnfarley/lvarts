datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String          @id @default(auto()) @map("_id") @db.ObjectId
  name                  String?
  email                 String?         @unique
  emailVerified         DateTime?
  image                 String?
  accounts              Account[]
  sessions              Session[]
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  Posts                 Posts[]
  UserDetails           UserDetails[]
  notifications         Notifications[] @relation("User")
  notiUserNotifications Notifications[] @relation("NotiUser")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model InvitationCodes {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  code String
}

model Notifications {
  id                String       @id @default(auto()) @map("_id") @db.ObjectId
  type              String
  read              Boolean
  userId            String       @db.ObjectId
  user              User         @relation("User", fields: [userId], references: [id])
  notiUserId        String       @db.ObjectId
  notiUser          User         @relation("NotiUser", fields: [notiUserId], references: [id])
  notiUserDetailsId String?      @db.ObjectId
  notiUserDetails   UserDetails? @relation(fields: [notiUserDetailsId], references: [id])
  createdAt         DateTime     @db.Date
  postId            String?      @db.ObjectId
  post              Posts?       @relation(fields: [postId], references: [id])
}

model Posts {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  content       String
  lexical       String?
  userId        String          @db.ObjectId
  user          User            @relation(fields: [userId], references: [id])
  userDetailsId String?         @db.ObjectId
  userDetails   UserDetails?    @relation(fields: [userDetailsId], references: [id])
  createdAt     DateTime        @db.Date
  updatedAt     DateTime        @db.Date
  edited        Boolean
  parentPostId  String?         @db.ObjectId
  parentPost    Posts?          @relation("Comments", fields: [parentPostId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  comments      Posts[]         @relation("Comments")
  postType      String?
  postFile      String?
  postFileType  String?
  privatePost   Boolean?
  tempFile      String?
  userDir       String?
  chatId        String?
  likes         Int?
  commentCount  Int?
  notifications Notifications[]
}

model UserDetails {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  userId        String          @db.ObjectId
  user          User?           @relation(fields: [userId], references: [id])
  displayName   String?
  userDir       String?
  createdAt     DateTime        @db.Date
  updatedAt     DateTime        @db.Date
  bio           String?
  avatar        String?
  chats         String[]        @db.ObjectId
  comments      String[]        @db.ObjectId
  followers     String[]        @db.ObjectId
  following     String[]        @db.ObjectId
  image         String?
  likedPosts    String[]        @db.ObjectId
  postIds       String[]        @db.ObjectId
  suspended     Boolean?
  posts         Posts[]
  notifications Notifications[]
}
